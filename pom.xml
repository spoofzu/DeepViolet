	</dependency>
	
  </dependencies>
  
    <build>
    <plugins>
      <!--  To build DeepViolet jars do, 1) maven clean, 2) maven install -->
      <!--  Change the mainClass to StartCMD or StartUI depending -->
      <!--  upon the type of class you want to start.  Not sure how -->
      <!--  to get maven to generate both jars at same time yet.   -->
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
	       	 <archive>
	          <manifest>
	            <mainClass>com.mps.deepviolet.bin.StartCMD</mainClass>
	          </manifest>
	        </archive>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
        </configuration>
      </plugin>
    </plugins>
    </build>
  
</project>